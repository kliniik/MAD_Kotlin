<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for the overflow menu (three dots) -->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <!-- Set text color to white for the overflow menu items -->
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="PopupThemeWhiteText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/textColorPrimary</item> <!-- Biały tekst -->
        <item name="android:background">@color/primaryColor</item> <!-- Tło -->
        <item name="android:popupBackground">@color/primaryColor</item> <!-- Tło menu -->
    </style>


</resources>
